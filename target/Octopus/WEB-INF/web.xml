<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0"
         metadata-complete="true">

  <servlet>
    <servlet-name>PostUtilServlet</servlet-name>
    <servlet-class>com.octopus.servlet.PostUtilServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>PostUtilServlet</servlet-name>
    <url-pattern>/discovery</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>discovery_jsp</servlet-name>
    <jsp-file>/WEB-INF/jsp/discovery.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>discovery_jsp</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>

</web-app>
